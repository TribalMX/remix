<script type="text/javascript">
  $('#loginForm').on('submit', function(event) {
    event.preventDefault();
    $.ajax({
      type: 'POST',
      url: '/login',
      data: $(this).serialize(),
      success: function(result) {
        if(result.user){
          window.location.replace('/');
        } else {
          alert("wrong Password");
        }
      }
    });
  })
</script> 
